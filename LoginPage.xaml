<Window x:Class="NeuroSync.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800">
    <Grid>
        <!-- Logo (Image) -->
        <Image Source="/Images/neurosync_logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="100"/>

        <!-- Input Fields for Login -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Name -->
            <Grid Margin="0,0,0,120">
                <TextBox x:Name="txtName" Width="200" Margin="0,0,0,30"/>
                <TextBlock Text="Enter Name" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Foreground="Gray"/>
            </Grid>

            <!-- Age -->
            <Grid Margin="0,60,0,80">
                <TextBox x:Name="txtAge" Width="200" Margin="0,0,0,30"/>
                <TextBlock Text="Enter Age" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Foreground="Gray"/>
            </Grid>

            <!-- Gender -->
            <Grid Margin="0,120,0,40">
                <TextBox x:Name="txtGender" Width="200" Margin="0,0,0,30"/>
                <TextBlock Text="Enter Gender" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Foreground="Gray"/>
            </Grid>

            <!-- Diagnostic Date -->
            <Grid Margin="0,180,0,0">
                <TextBox x:Name="txtDiagnosticDate" Width="200"/>
                <TextBlock Text="First Diagnostic Date" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Foreground="Gray"/>
            </Grid>
        </Grid>

        <!-- Submit Button -->
        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,240,0,0" Width="100" Click="SubmitButton_Click"/>

        <!-- Small "View Account Details" button in the corner -->
        <Button Content="View Account" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Width="100" Click="ViewAccountButton_Click"/>
    </Grid>
</Window>
