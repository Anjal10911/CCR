<!-- ReactionTimeGame.xaml -->
<Window x:Class="NeuroSyncApp.ReactionTimeGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reaction Time Game" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Reaction Time Game" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBlock x:Name="InstructionText" Text="Click the button as fast as possible when it turns green!" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0"/>

        <Button x:Name="ReactionButton" Content="Wait..." Background="Gray" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ReactionButton_Click"/>

        <TextBlock x:Name="ResultText" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,60"/>
    </Grid>
</Window>

