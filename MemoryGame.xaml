<Window x:Class="NeuroSyncApp.MemoryGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="450" Width="800">
    <Grid Background="LightGreen">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Heading -->
            <TextBlock Text="Memory Game" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>

            <!-- Score -->
            <TextBlock x:Name="ScoreTextBlock" Text="Score: 0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <!-- Game Grid -->
            <WrapPanel x:Name="GamePanel" Margin="10" HorizontalAlignment="Center">
                <!-- Memory cards will be added programmatically -->
            </WrapPanel>

            <!-- Go Back Button -->
            <Button Content="Go Back" Width="100" Height="30" Margin="10" Click="GoBack_Click"/>
        </StackPanel>
    </Grid>
</Window>

