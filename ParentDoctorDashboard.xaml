<Window x:Class="NeuroSyncApp.ParentDoctorDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parent/Doctor Dashboard" Height="500" Width="700">
    <Grid>
        <TextBlock Text="Child's Progress" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Line Graph -->
        <TextBlock Text="Overall Development" FontSize="16" HorizontalAlignment="Left" Margin="20,80,0,0"/>
        <Image Source="lineGraph.png" Width="300" Height="200" HorizontalAlignment="Left" Margin="20,120,0,0"/>

        <!-- Spider Graph -->
        <TextBlock Text="Development in Each Skill" FontSize="16" HorizontalAlignment="Right" Margin="0,80,20,0"/>
        <Image Source="spiderGraph.png" Width="300" Height="200" HorizontalAlignment="Right" Margin="0,120,20,0"/>

        <!-- Development Report Section -->
        <TextBlock Text="Development Report" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,80"/>
        <TextBlock Text="Seizures Experienced: No" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,60"/>
    </Grid>
</Window>


