<Window x:Class="NeuroSyncApp.ColorMatchingGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Matching Game" Height="450" Width="800">
    <Grid Background="LightCoral">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Game content goes here -->
            <TextBlock Text="Color Matching Game" FontSize="24" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
            <!-- Add your game UI here (e.g., color blocks to match) -->

            <!-- Reward Button -->
            <Button Content="Match Colors" Width="200" Height="40" Margin="10" Click="MatchColors_Click"/>

            <!-- Error Animation Button -->
            <Button Content="Test Error Animation" Width="200" Height="40" Margin="10" Click="TestErrorAnimation_Click"/>

            <!-- Go Back Button -->
            <Button Content="Go Back" Width="100" Height="30" Margin="10" Click="GoBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
