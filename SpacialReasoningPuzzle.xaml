<Window x:Class="NeuroSyncApp.SpatialReasoningPuzzle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spatial Reasoning Puzzle" Height="450" Width="800">
    <Grid Background="LightGray">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Game content goes here -->
            <TextBlock Text="Spatial Reasoning Puzzle" FontSize="24" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
            <!-- Add your game UI here (e.g., a puzzle with pieces) -->

            <!-- Reward Button -->
            <Button Content="Complete Puzzle" Width="200" Height="40" Margin="10" Click="CompletePuzzle_Click"/>

            <!-- Error Animation Button -->
            <Button Content="Test Error Animation" Width="200" Height="40" Margin="10" Click="TestErrorAnimation_Click"/>

            <!-- Go Back Button -->
            <Button Content="Go Back" Width="100" Height="30" Margin="10" Click="GoBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
